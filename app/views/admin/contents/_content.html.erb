<tr class="<%= cycle('', 'alt') %>">
  <td><%= link_to content.key, [:admin,content] %></td>
  <td><%= content.title %></td>
  <td><% tmpc = truncate(content.body, :length => 55) %><%= (tmpc != '' ? tmpc : '&nbsp;') %></td>
  <td><%= content.created_at.strftime('%d %b, %Y') %><qS/td>
  <td>
    <%= link_to(image_tag('silk/pencil.png', :alt => 'edit'), admin_content_path(content)) %>
    <%= form_for(content, :as => :content, :url => admin_content_path(content), :html => {:class => 'delete-item', :method => :delete}) do |form| -%>
      <%= image_submit_tag("silk/delete.png", :alt => 'Delete Content') %>
    <% end -%>
  </td>
</tr>
